# EditorConfig is awesome: https://EditorConfig.org
# It helps us maintain a consistent formatting style across editors and IDEs.

# This it the top-most EditorConfig file for this project.
root = true

[*]
# Encode all files using the UTF-8 character set.
charset = utf-8

# Use LF as the line ending character.
end_of_line = lf
# Ensure every file ends in a newline.
insert_final_newline = true
# Remove excess whitespace at the end of lines.
trim_trailing_whitespace = true

[*.{json,yaml}]
indent_style = space
indent_size = 2
